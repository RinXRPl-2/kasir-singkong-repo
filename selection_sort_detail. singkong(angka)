var selection_sort_detail = fn(a) {
    var n = len(a)
    println(a)
    var i = 0
    repeat {
        println("Memroses indeks " + i + ", nilai " + a[i])
        var m = i
        var j = i + 1

        repeat {
            if (j >= n) {
                println(" Mencapai akhir pencarian nilai terkecil untuk indeks " + i)
                return null
            }

            println(" Membandingkan dengan indeks " + j + ", nilai " + a[j])
            println(" Apakah " + a[j] + " < " + a[m] + "?")

            if (a[j] < a[m]) {
                var m = j
                println(" Ya, nilai terkecil baru di indeks " + m + ": " + a[m])
            } else {
                println(" Tidak, tetap: " + a[m])
            }

            var j = j + 1
        }

        if (m != i) {
            println(" Menukar: " + a[i] + " dengan " + a[m])
            var t = a[i]
            set(a, i, a[m])
            set(a, m, t)
            println(" Setelah swap: " + a)
        } else {
            println(" Tidak ada swap, nilai sudah yang terkecil")
        }

        var i = i + 1
        if (i >= n) {
            println("Mencapai akhir array")
            return null
        }
    }

    return a
}

var data = [5, 6, 2, 10]
selection_sort_detail(data)
